<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res-auto"
        android:key="quicksettings_settings"
        android:title="@string/quicksettings_settings_title">

    <com.pixeldust.support.preference.SystemSettingSeekBarPreference
        android:key="qs_header_image"
        android:title="@string/qs_header_image_title"
        android:defaultValue="0"
        settings:interval="1"
        android:max="24"
        android:min="0" />

    <com.pixeldust.support.preference.SystemSettingSeekBarPreference
        android:key="qs_transparency"
        android:title="@string/qs_transparency_title"
        android:summary="@string/qs_transparency_summary"
        android:defaultValue="100"
        settings:interval="1"
        settings:units="%"
        android:max="100"
        settings:min="1" />

    <com.pixeldust.support.preference.SystemSettingListPreference
        android:key="status_bar_quick_qs_pulldown"
        android:title="@string/status_bar_quick_qs_pulldown"
        android:summary="%s"
        android:dialogTitle="@string/status_bar_quick_qs_pulldown"
        android:entries="@array/quick_pulldown_entries"
        android:entryValues="@array/quick_pulldown_values"
        android:defaultValue="0" />

    <com.pixeldust.support.preference.SystemSettingSwitchPreference
        android:key="qs_footer_data_usage"
        android:title="@string/qs_footer_datausage_title"
        android:summary="@string/qs_footer_datausage_summary"
        android:defaultValue="false" />

    <com.pixeldust.support.preference.SecureSettingSwitchPreference
        android:key="secure_lockscreen_qs_disabled"
        android:title="@string/disable_qs_title"
        android:summary="@string/disable_qs_summary"
        android:defaultValue="false" />

</PreferenceScreen>
